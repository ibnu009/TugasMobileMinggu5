<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_cover_favorite"
        android:layout_width="115dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorTint"
        android:contentDescription="@string/to_display_movie_poster" />

    <TextView
        android:id="@+id/tv_title_favorite"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:singleLine="true"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cover_favorite"
        tools:text="MOVIE NAME" />

    <TextView
        android:id="@+id/tv_type_favorite"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:background="@drawable/circle_bg_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>