<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_cover_people"
        android:layout_width="115dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorTint"
        android:contentDescription="@string/to_display_person_picture" />

    <TextView
        android:id="@+id/tv_name_people"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cover_people"
        tools:text="MOVIE NAME" />

    <TextView
        android:id="@+id/tv_people_known_for_movie"
        android:layout_width="115dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGrey"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_people"
        tools:text="Category" />

</androidx.constraintlayout.widget.ConstraintLayout>